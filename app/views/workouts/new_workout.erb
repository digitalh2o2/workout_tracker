<h2>Log A New Workout, <%= @user.username %></h2>
<% if flash.has?(:message) %>
	<%= flash[:message] %>
<% end %>
<p>If inapplicable, fill in with "NA"</p>
<form method="post" action="/workouts">
	<label for="workout_name">Name of Exercise: </label>
	<input type="text" id="name" name="name">
	<br></br>

	<label for="pounds">Pounds: </label>
	<input type="text" id="pounds" name="pounds"> lbs
	<br></br>

	<label for="repetitions">Repetitions: </label>
	<input type="text" id="repetitions" name="repetitions">
	<br></br>

	<label for="sets">Number of Sets: </label>
	<input type="text" id="sets" name="sets">
	<br></br>

	<label for="muscle_group">Muscle Group Worked Out: </label>
	<input type="text" id="muscle_group" name="muscle_group">
	<br></br>

	<label for="date">Date: </label>
	<input type="text" id="date" name="date">
	<br></br>

	<input type="submit" value="Create Workout">
</form>